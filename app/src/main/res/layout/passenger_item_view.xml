<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/passenger_number_text_view"
            android:text="Passenger 1"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Booking Status: "
                android:textSize="25sp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/passenger_booking_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Booking status here"
                android:textStyle="bold"
                android:textSize="25sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Current Status: "
                android:textSize="25sp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/passenger_current_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Current status here"
                android:textStyle="bold"
                android:textSize="25sp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>